<%# Flash Message Section %>
<% if flash[:alert] || flash[:notice] %>
  <div class="flash-message">
    <%= tag.div(flash[:alert], class: "alert alert-danger") if flash[:alert] %>
    <%= tag.div(flash[:notice], class: "alert alert-success") if flash[:notice] %>
  </div>
<% end %>

<%# Form Login Section %>
<div class="container">
<div class="login-container">
  <h1 class="login-title">Login</h1>
  <%= form_with url: session_path do |form| %>
    <div class="form-group">
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Sign in", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "Forgot password?", new_password_path, class: "forgot-password-link" %>
</div>
</div>

<%# CSS Section %>
<style>
   .container{
        display:flex;
        justify-content:center;
      }
  /* Flash Messages */
  .flash-message {
    margin-bottom: 20px;
    text-align: center;
  }

  .alert {
    padding: 15px;
    border-radius: 5px;
    margin: 0 0 10px;
    font-weight: bold;
  }

  .alert-danger {
    background-color: #f8d7da;
    color: #721c24;
  }

  .alert-success {
    background-color: #d4edda;
    color: #155724;
  }


  /* Login Form Container */
  .login-container {
    background-color: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 30%;
    max-width: 400px; /* Limit max width */
  }

  /* Login Title */
  .login-title {
    text-align: center;
    font-size: 2em;
    margin-bottom: 20px;
    color: #333;
  }

  /* Form Groups */
  .form-group {
    margin-bottom: 20px;
  }

  /* Input Fields */
  .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 4px;
    border: 1px solid #ccc;
    font-size: 1em;
  }

  .form-control:focus {
    border-color: #4CAF50;
    box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
  }

  /* Submit Button */
  .btn-primary {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
  }

  .btn-primary:hover {
    background-color: #45a049;
  }

  /* Forgot Password Link */
  .forgot-password-link {
    display: block;
    text-align: center;
    margin-top: 10px;
    color: #4CAF50;
  }

  .forgot-password-link:hover {
    text-decoration: underline;
  }
</style>
